<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>The Blog | Reset Password</title>
    <link rel="stylesheet" href="./stylesheets/header.css">
    <link rel="stylesheet" href="./stylesheets/auth.css">
    <link rel="stylesheet" href="./stylesheets/style.css">
    <link rel="stylesheet" href="./stylesheets/footer.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Sen:wght@400..800&display=swap" rel="stylesheet">
    <link rel="shortcut icon" href="./images/blog-icon.svg" type="image/x-icon">
</head>
<body>
    <%- include('partials/header', {name: user.name, profilePicture: user.profilePicture }); %>

    <div class="form-container container">
        <h1 class="title container main-title">RESET</h1>
        <% if (error) { %>
            <p class="error"><%= error %></p>
        <% } %>
    <form action="/resetPassword" method="POST">
        <input class="auth-input" type="password" name="currentPass" placeholder="Current Password" required>
        <input class="auth-input" type="password" name="newPass" placeholder="New Password" minlength="8" required>
        <input class="auth-input" type="password" name="confirmPass" placeholder="Confirm Password" minlength="8" required>
        <button class="auth-btn main-btn" type="submit">Reset</button>
    </form>
    </div>

    <%- include('partials/footer'); %>
</body>
</html>